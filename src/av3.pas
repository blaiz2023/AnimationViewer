   begin
   inavs.value[inavcount]:=copy(ipath,1,p);
   inc(inavcount);
   end;//end of if
//.path
plen:=length(ipath);

//CORE
readone(tshome,'','',nahome,-1,-1,false,0);

//HOST
readone(ihost+' ['+general.ecdb(code,true)+']','','',nahost,-1,-1,false,iball);

