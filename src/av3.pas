   begin
   //set
   _rawname:=lowercase(_rawname);
   if (ilastrawname=_rawname) then inc(ilastcount)
   else
      begin
      ilastrawname:=_rawname;
      ilastcount:=0;
      end;//end of if
   _name:=general.asname(_name);
   //extra
   if (ilastcount>=1) then
      begin
      tmp:=inttostr(ilastcount+1);
      _rawname:=_rawname+tmp;
      _name:=_name+#32+tmp;
      end;//end of if
   //clear
   clear(icount);
   end;//end of if
except;end;
end;
