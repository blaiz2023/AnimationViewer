//## roll ##
function tmanagedudpex.roll(var index:integer;style:tmanagedudpexroll;range:integer):boolean;
var
   maxi,p,maxp:integer;
begin
try
//defaults
result:=false;
//init
//.range
if (range<=0) then range:=size;
maxp:=frcmin(frcmax(range-1,size-1),0);
//.index
if (index<-1) then index:=-1;
//.maxi
maxi:=size-1;
//scan
case style of
musNew:begin
   for p:=0 to maxp do
   begin
   //inc
   inc(index);
   if (index>maxi) then index:=0;
   //get
   if not iinuse.items[index] then
      begin
      result:=true;
      break;
      end;//end of if
   end;//end of loop
   end;//end of begin
musQueue:begin
   for p:=0 to maxp do
   begin
   //inc
   inc(index);
   if (index>maxi) then index:=0;
   //get
   if iinuse.items[index] and (iid.items[index]=udiNil) then
      begin
      result:=true;
      break;
      end;//end of if
   end;//end of loop
   end;//end of begin
end;//end of case
except;end;
end;
