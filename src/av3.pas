  i:=reffind(_ref);
  if (i>=0) and general.inf(_pfd,irefmask.items[i]^) then goto skipend;
  //.ok
  result:=true;
  end;//end of begin
//ALLOW - Note: [ip+iproxy] or [ua] or [both], but both is NOT required for acces only 1 or the other.
