try
{Error}
Result:=False;
Case ((iStream=nil) or (iBuffer.Count=0)) or (Not iBuffer.Modified) of
True:Result:=True;
False:begin
     //Write Buffer
     iStream.Position:=iBuffer.OffSet;
     Result:=(iStream.Write(iBuffer.Items,iBuffer.Count)=iBuffer.Count);
     end;//end of begin
end;//end of case
except;end;
end;
