             Z.G:=Z.R;
             Z.B:=Z.R;
             Ly:=C.Y;
             If Not C.PushPixel(Z) then break;{Special}
             If FactorOf8 and (C.X>=MaxW) then break;
             If (Ly<>C.Y) then break;{Normal}
             end;//end of loop
             end;//end of begin
         end;//end of case
         end;//end of loop
         end;//end of begin
pphsGreyB:begin{Greyscale}
         //Process Pixels
         For P:=Pos to MaxP Do
         begin
