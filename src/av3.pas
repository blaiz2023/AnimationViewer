      end;//end of if
   end;//end of if
//.inc
inc(p,klimit);
end;//end of loop
//.finalise
pushb(dLEN,d,'');
//.insert check sum value into header
i4.val:=cs;
d[6]:=i4.chars[0];
d[7]:=i4.chars[1];
d[8]:=i4.chars[2];
d[9]:=i4.chars[3];
