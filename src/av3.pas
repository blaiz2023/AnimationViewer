            begin
            {Progress}
            Progressing((P+1)*100 Div (MaxP+1),'Loading');
            Count:=0;
            end;//end of if

         Case A.Get(P,Val) of
         False:break;
         True:begin
             {Process Partial Scanline}
             Case I of
             0:Z.R:=FrcMax(Val,MaxColor);
             1:Z.G:=FrcMax(Val,MaxColor);
             2:begin
               Z.B:=FrcMax(Val,MaxColor);
