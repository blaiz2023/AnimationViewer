//## tofile ##
function taudio.tofile(x:string;var e:string):boolean;
label
   skipend;
var
   pos,dlen:integer;
   tmp,data:string;
begin
try
//defaults
result:=false;
data:='';
tmp:='';
dlen:=0;
e:=gecUnexpectedError;
if ireading then exit;
//header
doprogress(0,false);
if not readstart(tmp,e) then goto skipend;
e:=gecFileInUse;
if not remfile(x) then goto skipend;
if not io.toFILEAPPEND(x,tmp,e) then goto skipend;
pos:=length(tmp);
tmp:='';
//scan
e:=gecOutOfMemory;
while true do
begin
//get
if not readpull(tmp,e) then break;
pushb(dlen,data,tmp);
if (dlen>=1000000) then//1Mb
   begin
   //finalise
   pushb(dlen,data,'');
   //write
   if not io.toFILEAPPEND(x,data,e) then goto skipend;
   inc(pos,dlen);
   data:='';
   dlen:=0;
   end;//end of if
doprogress(general.cpercentage(pos,ibytes),false);
end;//end of loop
//finalise
if (dlen>=1) then
   begin
   //finalise
   pushb(dlen,data,'');
   //write
   if not io.toFILEAPPEND(x,data,e) then goto skipend;
   data:='';
   dlen:=0;
   end;//end of if
//successful
result:=true;
skipend:
