//.timeout
for p:=0 to imax do if timedout(p) then
   begin
   //..error
   if (istate.items[p]=byte(nwsOpen)) then ierror.items[p]:=byte(nweOpenTimeout)
   else if (istate.items[p]=byte(nwsIO)) then ierror.items[p]:=byte(nweIOTimeout);
   //..dead
   dodead(p);
   end;//end of if
except;end;
