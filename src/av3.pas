function tlookupmanagement.newthread(var x:integer):boolean;
var
   p:integer;
begin
try
//defaults
result:=false;
x:=-1;
//process
//.sync
syncthreads;
//.get
for p:=0 to (imaxthread-1) do if (ithreads[p]<>nil) and (not ithreads[p].running) then
   begin
   x:=p;
   result:=true;
   break;
   end;//end of if
except;end;
end;
