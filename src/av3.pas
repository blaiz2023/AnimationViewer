   skipend;
var
   ui:tparseurl;
   p:integer;
begin
try
//defaults
result.c:=0;
p:=-1;
//process
//.new
if not new(p) then goto skipend;
//.set
general.pu('http://'+url,'',ui,[]);
ionclose.items[p]:=tnotifyevent(autoclose);
iurl.items[p]^:=url;
ihost.items[p]^:=ui.h;
iip.items[p]:=0;
iport.items[p]:=ui.pt;
itag.items[p]:=tag;
