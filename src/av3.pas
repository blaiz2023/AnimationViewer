MaxY:=X.Height-1;
MaxX:=X.Width-1;
For rY:=0 to MaxY Do
begin
Row:=X.Scanline[rY];
 For rX:=0 to MaxX Do
 begin
 Z:=Row[rX];
 Case (Transparent and ccs.RGBEqual(Z,Info.TransColor)) of
 True:pI:=0;
 False:pI:=ccs.AddRGBToPalette(Pal,Row[rX]);{max of 256 colors}
 end;//end of case
 If (pI=-1) or (Pal.Count>=MaxCount) then Goto SkipEnd;
 end;//end of loop
end;//end of loop
