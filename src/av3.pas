         begin
         np:=tnetworkptr(iserverptr.items[x.index]);
         if (nwsServer=style[np]) then general.croll(isent.items[np.index],tmp);
         end;//end of if
      //.shrink choke
      ichoke.items[x.index]:=frcmin(ichoke.items[x.index]-tmp,0);
      //.time
