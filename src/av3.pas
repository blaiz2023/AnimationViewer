if general.pause then application.processmessages;
until ((ms64-t)>=5000) or (not cansendto(x));
//.stats
if (result>=1) and cansendto(x) then
   begin
   general.croll(nw.sentall,result);
   general.croll(isent.items[x.index],result);
   end;//end of if
except;end;
