//scan
for dy:=0 to (h-1) do
begin
r:=x.scanline[dy];
 for dx:=0 to (w-1) do
 begin
 //get
 zc:=r[dx];
 pix[pixcount]:=palfind(pal,palcount,zc);
 inc(pixcount);
