            begin
            {Progress}
            Progressing((P+1)*100 Div (MaxP+1),'Loading');
            Count:=0;
            end;//end of if

         Case A.Get(P,Val) of
         False:break;
         True:begin
             {Process Partial Scanline}
             B.Count:=0;
