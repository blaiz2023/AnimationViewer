var
   tmp:string;
begin
try
if inuse[x] then
   begin
   //event
   if assigned(ionclose.items[x]) then tmanagedudpexcloseevent(ionclose.items[x])
      (self,x,iip.items[x],iport.items[x],isend.items[x]^,irecv.items[x]^,extra,itag.items[x],istr.items[x]^,iobj.items[x]);
   //clear
   clearitem(x);
