   _constcount,_posfinish,_posstart,_funccount,_varcount,_codecount,p:integer;
   t,s:byte;
   tmpstr:string;
begin
try
//defaults
result:=false;
e:=gecBusy;
//check
if not canread then exit else iloading:=true;
//init
e:=gecDataCorrupt;
clear;
a.x:=x;
